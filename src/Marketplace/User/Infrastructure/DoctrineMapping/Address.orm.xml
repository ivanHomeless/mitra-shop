<?xml version="1.0" encoding="UTF-8"?>
<doctrine-mapping xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
                          https://www.doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
    <entity name="App\Marketplace\User\Domain\Entity\Address" table="address">
        <id name="id" type="integer" column="id">
            <generator strategy="AUTO"/>
        </id>
        <field name="city" column="city" type="string" length="255"/>
        <field name="street" column="street" type="string" length="255"/>
        <field name="house" column="house" type="string" length="255"/>
        <field name="phone" column="phone" type="string" length="255"/>
        <field name="postal_code" type="integer"/>
        <many-to-many field="user" target-entity="App\Marketplace\User\Domain\Entity\User" mapped-by="address">
            <join-table name="user_to_shop"/>
        </many-to-many>
    </entity>
</doctrine-mapping>
