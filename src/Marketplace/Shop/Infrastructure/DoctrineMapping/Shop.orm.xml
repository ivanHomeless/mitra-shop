<?xml version="1.0" encoding="UTF-8"?>
<doctrine-mapping xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
                          https://www.doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
    <entity name="App\Marketplace\Shop\Domain\Entity\Shop" table="shop" repository-class="App\Marketplace\Shop\Infrastructure\Repository\ShopRepository">
        <id name="id" column="id" type="ineger">
            <generator strategy="AUTO"/>
        </id>
        <field name="name" column="name" type="string" length="255"/>
        <field name="description" column="description" type="text"/>
        <field name="status" column="status" type="integer"/>
        <field name="updatedAt" column="updated_at" type="datetime"/>
        <field name="createdAt" column="created_at" type="datetime"/>
        <many-to-many field="user" target-entity="App\Marketplace\User\Domain\Entity\User" inversed-by="shops">
            <join-table name="user_to_shop"/>
        </many-to-many>
    </entity>
</doctrine-mapping>
